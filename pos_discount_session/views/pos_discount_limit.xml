<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_pos_session_inherit_form">
			<field name="name">discount.limit</field>
			<field name="model">pos.session</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
			<field name="arch" type="xml">
<!--                <field name="company_id" position="after">-->
                <field name="start_at" position="after">
<!--                    <field name="rating"/>-->
                    <field name="is_discount_limit" />
                    <field name="discount_limit"
                    attrs="{'invisible': [('is_discount_limit', '=', False)]}"/>
                    <field name="discount_category_ids" widget="many2many_tags"
                    attrs="{'invisible': [('is_discount_limit', '=', False)]}"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_pos_sess_inherit_form">
			<field name="name">discount</field>
			<field name="model">pos.config</field>
			<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
			<field name="arch" type="xml">
                <xpath expr="//div[@id='company']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_discount_limit" attrs="{'readonly': [('has_active_session','=', True)]}"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_discount_limit"/>
                                <div attrs="{'invisible': [('is_discount_limit', '=', False)]}">
                                    <div>
                                    <label for="discount_limit"/>
                                    <field name="discount_limit" attrs="{'readonly': [('has_active_session','=', True)]}"/>
                                    </div>
                                    <label for="discount_categ_ids"/>
                                    <field name="discount_categ_ids" widget="many2many_tags" attrs="{'readonly': [('has_active_session','=', True)]}" groups="point_of_sale.group_pos_manager"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

